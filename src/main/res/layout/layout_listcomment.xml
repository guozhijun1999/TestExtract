<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/topic_detail_item_headimg"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/topic_detail_item_headname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/topic_detail_item_headimg"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/topic_detail_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/topic_detail_item_headname"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@id/topic_detail_item_headimg"
            android:text="66分钟前"
            android:textColor="@color/textColor"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/topic_detail_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/topic_detail_item_time"
            android:layout_below="@id/topic_detail_item_time"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/app_name"
            android:textColor="@color/textColor"
            android:textSize="@dimen/dp_18" />

        <TextView
            android:id="@+id/topic_detail_item_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:text="666"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dp_12" />

        <ImageView
            android:id="@+id/topic_detail_item_click_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toLeftOf="@id/topic_detail_item_likes"
            android:src="@mipmap/detail_clickgood" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
