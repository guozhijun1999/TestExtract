<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activeity.LandingActivity">

    <ImageView
        android:id="@+id/landing_close"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_6"
        android:src="@mipmap/landing_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_24"
        android:text="欢迎登陆第一通航"
        android:textColor="#222222"
        android:textSize="60px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/landing_et_name"
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_45"
        android:hint="+86 | 请输入手机号"
        android:textSize="@dimen/sp_14"
        android:textColor="#999999"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/landing_et_passward"
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:ems="10"
        android:hint="请输入验证码"
        android:singleLine="true"
        android:textSize="@dimen/sp_14"
        android:textColor="#999999"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/landing_et_name" />

    <TextView
        android:id="@+id/landing_tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_160"
        android:text="获取验证码"
        android:textColor="#494949"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_160"
        android:text="|"
        app:layout_constraintEnd_toStartOf="@+id/landing_tv_code"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_10"
        android:text="未注册手机验证后自动登录"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/landing_et_passward" />

    <ImageView
        android:id="@+id/landing_btn_landing"
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_46"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@mipmap/landing_landing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageView
        android:id="@+id/landing_checkbox"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_19"
        android:layout_marginStart="@dimen/dp_105"
        android:layout_marginTop="@dimen/dp_8"
        android:src="@mipmap/landing_select_frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/landing_btn_landing" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:textSize="@dimen/sp_12"
        android:text="我已阅读并同意 “"
        app:layout_constraintStart_toEndOf="@+id/landing_checkbox"
        app:layout_constraintTop_toBottomOf="@+id/landing_btn_landing" />

    <TextView
        android:id="@+id/landing_tv_protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:text="用户协议"
        android:textSize="@dimen/sp_12"
        android:textColor="#6281ad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/landing_btn_landing" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="”"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toEndOf="@+id/landing_tv_protocol"
        app:layout_constraintTop_toBottomOf="@+id/landing_btn_landing" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/dp_292"
        android:layout_height="@dimen/dp_19"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:src="@mipmap/landing_dsfksdl"
        app:layout_constraintBottom_toTopOf="@+id/landing_ym_qq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/landing_ym_wecth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_52"
        android:layout_marginStart="@dimen/dp_88"
        android:src="@mipmap/landing_wecth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/landing_ym_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_52"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:src="@mipmap/landing_qq"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/landing_ym_xinlang"
        app:layout_constraintStart_toEndOf="@+id/landing_ym_wecth" />

    <ImageView
        android:id="@+id/landing_ym_xinlang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_52"
        android:layout_marginEnd="@dimen/dp_88"
        android:src="@mipmap/landing_xinlang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>