<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    android:orientation="vertical"
    tools:context=".activeity.HomeActivity">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/home_toolbar_bgcolor"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        android:layout_centerInParent="true"
        android:src="@mipmap/ditonghang2"
        />
    <ImageView
        android:id="@+id/image_sousuo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/sou2"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/home_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        ></android.support.v4.view.ViewPager>
    <android.support.design.widget.TabLayout
        android:id="@+id/home_tab"
        android:layout_width="match_parent"
        app:tabSelectedTextColor="@color/home_tab_textcolor"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></android.support.design.widget.TabLayout>


</LinearLayout>