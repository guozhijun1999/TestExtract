<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_6"
    android:paddingStart="@dimen/dp_6"
    android:paddingBottom="@dimen/dp_20"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/informc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginStart="@dimen/dp_5"
        android:textSize="@dimen/sp_18"
        />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/informc_image1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_100"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            />
        <ImageView
            android:id="@+id/informc_image2"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_100"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_4"
            />
        <ImageView
            android:id="@+id/informc_image3"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_100"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/informc_top"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/news_top2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textSize="@dimen/sp_14"
            android:textColor="#a4a4a4"
            android:text="第一通航"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/informc_x"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:src="@mipmap/news_x2" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
