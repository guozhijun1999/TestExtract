<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/ba"
    android:layout_height="@dimen/dp_70">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_69"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_notify_image"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_69"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_notify_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="@dimen/dp_15"
                android:text="系统消息"/>
            <TextView
                android:id="@+id/item_notify_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_color_gray"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/sp_12"
                android:text="关注了你"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_69">

            <TextView
                android:id="@+id/item_notify_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_color_gray"
                android:textSize="@dimen/sp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:text="5月12号"/>

            <com.example.testnavigation.view.QQBezierView
                android:id="@+id/qq_point"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:background="@drawable/red_bg"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="1"
                android:textColor="@color/ba"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_40"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/bg_focus"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>