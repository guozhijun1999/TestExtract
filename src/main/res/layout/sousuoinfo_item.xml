<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/sousuoinfo_head"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/ic_launcher_background"/>
        <TextView
            android:layout_toRightOf="@id/sousuoinfo_head"
            android:id="@+id/sousuoinfo_name"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/colorBlack"
            android:text="name"/>
        <TextView
            android:id="@+id/sousuoinfo_tim"
            android:textColor="@color/huise2"
            android:layout_toRightOf="@id/sousuoinfo_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/sousuoinfo_head"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="tim"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/sousuoinfo_context"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2222222222"
        android:maxLines="2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/sousuoinfo_image11"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_90"
            android:scaleType="centerCrop"
            android:src="@drawable/mine"/>
        <ImageView
            android:id="@+id/sousuoinfo_image22"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_90"
            android:scaleType="centerCrop"
            android:src="@drawable/mine"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/sousuoinfo_image33"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_90"
            android:scaleType="centerCrop"
            android:src="@drawable/mine"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/sousuoinfo_yuedu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="0"/>
        <TextView
            android:id="@+id/sousuoinfo_pinglun"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="0"/>
        <TextView
            android:id="@+id/sousuoinfo_dianzan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="阅读"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="评论"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="点赞"/>
    </LinearLayout>

</LinearLayout>
