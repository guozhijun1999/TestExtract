<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ba"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:text="通航爱好者"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="十五分钟前"
                android:textColor="@color/theme_color_gray" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:lineSpacingExtra="@dimen/dp_5"
            android:text="房贷首付第三方但是是放到说的都是是否房贷首付"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_17" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_image_1"
            android:layout_width="@dimen/dp_105"
            android:layout_height="@dimen/dp_55"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@color/colorBlack" />

        <ImageView
            android:id="@+id/item_image_2"
            android:layout_width="@dimen/dp_105"
            android:layout_height="@dimen/dp_55"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:scaleType="centerCrop"
            android:src="@color/colorBlack" />

        <ImageView
            android:id="@+id/item_image_3"
            android:layout_width="@dimen/dp_105"
            android:layout_height="@dimen/dp_55"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:scaleType="centerCrop"
            android:src="@color/colorBlack" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/bg_focus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:text="最新参与"
            android:textColor="@color/theme_color_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/collection_topic">

            <TextView
                android:id="@+id/item_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:lineSpacingExtra="@dimen/dp_5"
                android:text="分电视剧就流口水弗兰克的肌肤离开急急急拉开距离篮筐的首付贷款"
                android:textSize="@dimen/sp_16" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/bg_focus" />
</LinearLayout>
