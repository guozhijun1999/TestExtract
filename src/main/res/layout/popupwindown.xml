<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_10"
        android:orientation="vertical" >

        <Button
            android:id="@+id/tvTakePhoto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@drawable/popub_button1"
            android:text="相机拍摄"
            android:textColor="@color/theme_color_blue"
            android:textSize="@dimen/sp_18" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/hint_color"/>

        <Button
            android:id="@+id/tvSelectPhoto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@drawable/popub_button2"
            android:text="相册选取"
            android:textColor="@color/theme_color_blue"
            android:textSize="@dimen/sp_18" />

        <Button
            android:id="@+id/tvDiss"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/popub_button"
            android:text="取消上传"
            android:textColor="@color/theme_color_blue"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>
</RelativeLayout>
