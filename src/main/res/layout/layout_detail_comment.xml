<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_200">

    <TextView
        android:id="@+id/detail_comment_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:text="取消"
        android:textColor="@color/textColor"
        android:textSize="@dimen/dp_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:text="写评论"
        android:textColor="@color/textColor"
        android:textSize="@dimen/dp_14" />

    <TextView
        android:id="@+id/detail_comment_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:text="发布"
        android:textColor="@color/textColor"
        android:textSize="@dimen/dp_14" />

    <EditText
        android:id="@+id/detail_comment_edi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        android:layout_below="@id/detail_comment_release"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/edi"
        android:gravity="top"
        android:hint="评论内容最多150字"
        android:maxLines="5"
        android:minLines="5"
        android:padding="@dimen/dp_10"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/dp_14" />

</RelativeLayout>
